rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "yursccc@gmail.com" || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin"
      );
    }
    
    // Helper to check if sensitive wallet fields are being modified
    function walletFieldsUnchanged() {
      return !request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['wallet_balance', 'wallet_on_hold', 'referralCode', 'referredBy', 'hasFirstPurchase']);
    }

    // User Profiles - Enhanced for wallet protection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can update their own profile EXCEPT wallet/referral fields
      allow update: if (isOwner(userId) && walletFieldsUnchanged()) || isAdmin();
      
      // Only admin can create users with special fields
      allow create: if isOwner(userId) || isAdmin();
      
      // Only admin can delete
      allow delete: if isAdmin();
    }

    // Orders
    match /orders/{orderId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Products
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Categories - Public read, admin write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Pending Commissions - Admin controls payouts
    match /pendingCommissions/{commissionId} {
      // Users can read their own commissions (as referrer)
      allow read: if isSignedIn() && (resource.data.referrerId == request.auth.uid || isAdmin());
      
      // Only admin can create/update/delete commissions
      allow create, update, delete: if isAdmin();
    }

    // Withdrawals - Users can request, admin processes
    match /withdrawals/{withdrawalId} {
      // Users can read their own withdrawals
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Users can create withdrawal requests with validation
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.status == "pending" &&
        request.resource.data.amount >= 500;
      
      // Only admin can update (approve/reject) or delete
      allow update, delete: if isAdmin();
    }

    // Transaction Logs - Immutable audit trail
    match /transactionLogs/{logId} {
      // Users can read their own transaction history
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admin can create logs
      allow create: if isAdmin();
      
      // Nobody can update or delete - immutable
      allow update, delete: if false;
    }

    // Settings (WhatsApp number, Commission %, Referral settings, Cloudinary)
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Referrals - Track referral relationships and commissions
    match /referrals/{referralId} {
      // Users can read referrals where they are the referrer
      allow read: if isSignedIn() && (resource.data.referrerId == request.auth.uid || isAdmin());
      
      // Only admin can manage referrals
      allow create, update, delete: if isAdmin();
    }

    // Wallet Transactions - Audit trail for wallet operations
    match /wallet_transactions/{transactionId} {
      // Users can read their own transactions
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admin can create transactions (immutable)
      allow create: if isAdmin();
      
      // Nobody can update or delete - immutable
      allow update, delete: if false;
    }
  }
}
